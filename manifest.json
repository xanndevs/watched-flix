{
  "manifest_version": 3,
  "name": "I Already Watched This Netflix",
  "version": "0.1",

  "action": {
    "default_popup": "index.html",
    "default_icon": "src/WatchedFlix.png",
    "default_title": "Click to open sidebar"
  },
  "description": "An extension to hide the things you have watched",
  "author": "xanndevs",
  "host_permissions":["https://www.netflix.com/*"],
  "content_scripts": [{
      "matches": ["https://www.netflix.com/*"], 
      "js": ["content_editor.js"],
      "run_at": "document_idle"
  }],
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["sidePanel", "scripting", "activeTab"],
  "web_accessible_resources": [
     {
    "resources": ["src/WatchedFlix_transparent.png"],
    "matches":["https://www.netflix.com/*"]
    }
  ] 

}

